#!/usr/bin/env bash

MTSG_HOME=$(realpath $(dirname $0)/../..)

HOME=$MTSG_HOME/tmp/test
PATH=$MTSG_HOME/test/bin:$PATH

DEFAULT_VCFS=($HOME/in/vcfs/0/*)

# inputs
vcfs=(${1:-${DEFAULT_VCFS[@]}})
sample_sheet=$2
genome_build=${3:-GRCh38}
min_burden=${4:-9}
min_contribution=${5:-9}
prefix=$6
disable_column=$7

# outputs
signatures_txt=""
signatures_html=""
sample_sheet_out=""

source $MTSG_HOME/src/mtsg.sh
main

exit $?
