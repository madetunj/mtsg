{
  "name": "mtsg",
  "title": "St. Jude Mutational Signatures",
  "summary": "Find and quantify COSMIC mutational signatures across samples",
  "dxapi": "1.0.0",
  "version": "3.0.0-1",
  "openSource": true,
  "details": {
    "upstreamUrl": "https://github.com/stjude/mtsg",
    "upstreamVersion": "3.0.0",
    "upstreamLicenses": ["MIT"]
  },
  "inputSpec": [
    {
      "name": "vcf_srcs",
      "label": "VCF source(s)",
      "class": "array:file",
      "patterns": ["*.vcf"]
    }
  ],
  "outputSpec": [
    {
      "name": "signature_activities_txt",
      "label": "Raw signature activities",
      "class": "file"
    },
    {
      "name": "signature_activities_html",
      "label": "Signature activities visualization",
      "class": "file"
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "file": "src/mtsg.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "regionalOptions": {
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem2_ssd1_x1"
        }
      }
    }
  },
  "authorizedUsers": [
    "org-stjude_cloud",
    "org-stjude_cloud_app_runners"
  ]
}
